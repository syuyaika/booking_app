<%= form_with model: @user, url: update_account_settings_path, local: true do |form| %>
  <div class="container">
    <div class="row my-4">
      <div class="col-md-6">
        <h2>アカウント情報</h2>
        
        <div class="mb-3">
          <%= form.label :email, "メールアドレス", class: "form-label" %>
          <p class="form-control-plaintext"><%= @user.email %></p>
        </div>
        
        <div class="mb-3">
          <%= form.label :password, "パスワード", class: "form-label" %>
          <p class="form-control-plaintext">*********</p>
        </div>

        <div class="mb-3">
          <%= link_to "アカウント情報の編集", edit_account_path, class: "btn btn-secondary" %>
        </div>
      </div>

      <div class="col-md-6">
        <h2>プロフィール</h2>
        
        <div class="mb-3">
          <%= form.label :avatar, "アイコン画像", class: "form-label" %>
          <% if @user.avatar.attached? %>
            <div class="mb-3">
              <%= image_tag @user.avatar, size: "100x100", class: "img-thumbnail" %>
            </div>
          <% else %>
            <p class="text-danger">アバター画像が設定されていません。</p>
          <% end %>
        </div>

        <div class="mb-3">
          <%= form.label :username, "名前", class: "form-label" %>
          <p class="form-control-plaintext"><%= @user.username %></p>
        </div>

        <div class="mb-3">
          <%= form.label :bio, "自己紹介", class: "form-label" %>
          <p class="form-control-plaintext"><%= @user.bio %></p>
        </div>

        <div class="mb-3">
          <%= link_to "プロフィールの編集", edit_profile_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
