<h1>あなたの予約</h1>

<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>チェックイン日</th>
      <th>チェックアウト日</th>
      <th>合計金額</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.room.name, reservation.room %></td>
        <td><%= reservation.check_in.strftime("%Y/%m/%d") %></td>
        <td><%= reservation.check_out.strftime("%Y/%m/%d") %></td>
        <td><%= number_to_currency(reservation.total_price) %></td>
        <td>
          <%= link_to '編集', edit_room_reservation_path(reservation.room, reservation), class: 'btn btn-warning' %>
          <%= link_to '削除', [reservation.room, reservation], method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
