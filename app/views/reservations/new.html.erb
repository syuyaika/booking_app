<div class="container my-4">
  <div class="text-center">
    <div class="room-image mb-4">
      <% if @room.image.attached? %>
        <%= image_tag @room.image, size: "300x300", alt: "Room Image", class: "img-thumbnail" %> <!-- 施設の画像を表示 -->
      <% else %>
        <p>画像がありません</p>
      <% end %>
    </div>

    <h2><%= @room.name %></h2>
    <p>料金: <%= number_to_currency(@room.price) %> /日</p>

    <% if @reservation.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @reservation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: [@room, @reservation], local: true do |form| %>
      <div class="form-group mb-3">
        <%= form.label :check_in, 'チェックイン日' %>
        <%= form.date_field :check_in, class: 'form-control' %>
      </div>
      <div class="form-group mb-3">
        <%= form.label :check_out, 'チェックアウト日' %>
        <%= form.date_field :check_out, class: 'form-control' %>
      </div>
      <div class="form-group mb-3">
        <%= form.label :guests, '人数' %>
        <%= form.number_field :guests, class: 'form-control', min: 1 %>
      </div>
      <div class="d-flex justify-content-between mt-4">
        <%= form.submit '予約する', class: 'btn btn-primary' %>
        <%= link_to '戻る', rooms_path, class: 'btn btn-secondary' %>
      </div>
      <% end %>
  </div>
</div>
