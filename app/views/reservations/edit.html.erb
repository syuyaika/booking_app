<div class="container my-4">
  <h2 class="text-center mb-4">予約編集</h2>

  <% if @reservation.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @reservation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <%= form_with model: [@room, @reservation], local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.label :check_in, 'チェックイン日', class: 'form-label' %>
          <%= form.date_field :check_in, class: 'form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :check_out, 'チェックアウト日', class: 'form-label' %>
          <%= form.date_field :check_out, class: 'form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :guests, '人数', class: 'form-label' %>
          <%= form.number_field :guests, class: 'form-control', min: 1 %>
        </div>
        <div class="text-center">
          <%= form.submit '更新する', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
