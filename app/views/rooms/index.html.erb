<h1>登録済み施設一覧</h1>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>宿泊料金</th>
      <th>作成日</th>
      
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% if room.image.attached? %>
            <%= image_tag room.image, size: "100x100" %>
          <% end %>
        </td>
        <td><%= link_to room.name, new_room_reservation_path(room) %></td>
        <td><%= room.description %></td>
        <td><%= room.price %> /日</td>
        <td><%= room.created_at.strftime("%Y/%m/%d") %></td>
        <td>
        <%= link_to '編集', edit_room_path(room), class: 'btn btn-primary' %>
        </td>
        <%= form_with(url: room_path(room), method: :delete, local: true, style: "display:inline") do %>
        <td>
          <%= button_tag '削除', type: 'submit', class: 'btn btn-danger', data: { confirm: '本当に削除しますか？' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
