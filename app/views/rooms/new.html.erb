<h2 class="text-center my-4">新規登録</h2>

<% if @room.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <%= form_with model: @room, local: true, html: { class: 'form-group' } do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, "施設名", class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :description, "施設詳細", class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :price, "料金(1日あたり)", class: 'form-label' %>
        <%= form.number_field :price, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :address, "住所", class: 'form-label' %>
        <%= form.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :image, "画像", class: 'form-label' %>
        <%= form.file_field :image, class: 'form-control' %>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <%= form.submit '登録', class: 'btn btn-primary' %>
        <%= link_to 'キャンセル', :back, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
