<h2 class="text-center my-4">施設情報の編集</h2>

<% if @room.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-6 mx-auto">
  <%= form_with model: @room, local: true do |form| %>
    <div class="form-group mb-3">
      <%= form.label :name, "施設名", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :description, "施設詳細", class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :price, "料金", class: "form-label" %>
      <%= form.number_field :price, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :address, "住所", class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :image, "画像", class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
      <% if @room.image.attached? %>
        <p class="mt-2">現在の画像:</p>
        <%= image_tag @room.image, size: "100x100", class: "img-thumbnail" %>
      <% end %>
    </div>

    <div class="text-center">
      <%= form.submit '更新', class: 'btn btn-primary' %>
      <%= link_to 'キャンセル', rooms_path, class: 'btn btn-secondary ml-2' %>
    </div>
  <% end %>
</div>
