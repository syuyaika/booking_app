<h1><%= @room.name %></h1>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>宿泊料金</th>
      <th>住所</th>
    </tr>
  </thead>
  <tbody>
    
    <tr>
      <td>
        <% if @room.image.attached? %>
        <%= image_tag @room.image, size: "100x100" %>
        <% end %>
      </td>
      <td><%= @room.name %></td>
      <td><%= @room.description %></td>
      <td><%= @room.price %> /日</td>
      <td><%= @room.address %></td>
    </tr>
  </tbody>
</table>



