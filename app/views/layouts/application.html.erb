<!DOCTYPE html>
<html>
  <head>
    <title>BookingApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="navbar">
        <div class="navbar-left">
          <%= link_to 'とりっぷ', root_path, class: 'navbar-logo' %>
        </div>
        <div class="navbar-right">
          <% if user_signed_in? %>
            <div class="user-info" id="user-info">
              <%= image_tag current_user.avatar, size: "50x50" if current_user.avatar.attached? %>
              <span class="username"><%= current_user.username %></span>
              <button class="dropbtn">▼</button>
              <div class="dropdown-content" id="dropdown-content">
                  <%= link_to '新規の施設登録', new_room_path %>
                  <%= link_to '予約済み一覧', reservations_path %>
                  <%= link_to '登録済み一覧', rooms_path %>
                  <%= link_to 'アカウント設定', edit_user_settings_path %>
                  <%= button_to 'ログアウト', destroy_user_session_path, class: "btn btn-danger w-100", method: :delete %>
                  </div>
              </div>
          <% else %>
            <div class="btn-group">
              <%= link_to '新規登録', new_user_registration_path, class: 'btn btn-primary' %>
              <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-outline-primary ml-2' %>
            </div>
          <% end %>
        </div>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
